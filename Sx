void shaker(int m[], int sl)
{
    int l = 0, r = sl - 1, k = sl - 1;
 
    while (l < r) 
    {
        for(int i = l; i < r; i++)
        {
            if(m[i] > m[i + 1])
            {
                swap(m[i], m[i + 1]);
                k=i;
            }
        }
        r=k;
 
        for(int i = r; i > l; i--)
        {
            if(m[i] < m[i - 1])
            {
                swap(m[i], m[i - 1]);
                k=i;
            }
        }
        l=k;
    }
}
