	"CHUONG TRINH QUAN LY MON HOC",
	"1. In danh sach cac mon hoc",
	"2. Them mon hoc",
	"3. Xoa mon hoc",
	"4. Cap nhat mon hoc",
	"5. Tim kiem mon hoc",
	"6. Xap sep mon hoc",
	"7. Thoat chuong trinh"
};

//menu cap nhat
string mn_cn[] = {
	"CAP NHAT THONG TIN",
	"1. Cap nhat MSMN",
	"2. Cap nhat ten mon hoc",
	"3. Cap nhat so tin chi",
	"4. Cap nhat so gio ly thuyet",
	"5. Cap nhat so gio thuc hanh",
	"6. Cap nhat so gio tu hoc",
	"7. Cap nhat tat ca",
	"8. Thoat",
};

//menu tim kiem
string mn_tk[] = {
