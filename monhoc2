{
	int chon1, chon2, luu[10], sl2 = 0, tt = 0, d = 0, c = sl - 1, g;
	char chu[50];

	if (sx == 1)

	do {
		system("cls");
		inmn(mn_tk2, size(mn_tk2), x, y);
		cin >> chon1;
		cin.ignore();







	} while (chon1 != 7);
}

//tim kiem
void tk(monhoc m[], int sl)
{
	int so, chon;
	char yn;

	do {
		system("cls");
		inmn(mn_tk, size(mn_tk), xd, yd);
		cin >> chon;

		switch (chon)
		{
		case 1:
			system("cls");
			tk_liner(m, sl, xd, yd);
			stop = _getch();
			break;
			/*case 2:*/
		}

	} while (chon != 3);
}

