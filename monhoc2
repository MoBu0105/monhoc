					stop = _getch();
					break;
				case 2:
					system("cls");
					so = m[0].lt;
					for (int i = 0; i < sl; i++)
						if (so > m[i].tuh)
							so = m[i].tuh;
					for (int i = 0; i < sl; i++)
					{
						if (m[i].tuh == so)
						{
							sl2++;
							luu[sl2 - 1] = i;
							tt = 1;
						}
					}
					intd(x, y);
					y++;
					for (int i = 0; i < sl2; i++)
					{
						xy(x, y);
						cout << luu[i] + 1;
						inmh(m[luu[i]], x, y);
						y++;
					}
					y = 1;

					cout << "\n\nCo " << sl2 << " mon hoc co so gio tu hoc thap nhat tai vi tri ";
					for (int i = 0; i < sl2; i++)
						cout << luu[i] + 1 << " ";
					stop = _getch();
					break;
				case 3:
					system("cls");
					cout << "Nhap so gio thuc hanh can tim: ";
					cin >> so;
					cin.ignore();
					for (int i = 0; i < sl; i++)
					{
						if (m[i].tuh == so)
						{
							sl2++;
							luu[sl2 - 1] = i;
							tt = 1;
						}
					}
					if (tt == 1)
					{
						intd(x, y);
						y++;
						for (int i = 0; i < sl2; i++)
						{
							xy(x, y);
							cout << luu[i] + 1;
							inmh(m[luu[i]], x, y);
							y++;
						}
						y = 1;

						cout << "\n\nCo " << sl2 << " mon hoc co so gio tu hoc la " << so << " tai vi tri ";
						for (int i = 0; i < sl2; i++)
							cout << luu[i] + 1 << " ";
					}
					else
						cout << "Khong tim thay mon hoc co so gio tu hoc la " << so << " trong danh sanh!";
					stop = _getch();
				}
				sl2 = 0;
			} while (chon2 != 4);
			sl2 = 0;
		}
	} while (chon1 != 7);
}

//tim kiem binary
