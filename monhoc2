						xy(x, y);
						cout << luu[i] + 1;
						inmh(m[luu[i]], x, y);
						y++;
					}
					y = 1;

					cout << "\n\nCo " << sl2 << " mon hoc co so gio ly thuyet thap nhat tai vi tri ";
					for (int i = 0; i < sl2; i++)
						cout << luu[i] + 1 << " ";
					stop = _getch();
					break;
				case 3:
					system("cls");
					cout << "Nhap so gio ly thuyet can tim: ";
					cin >> so;
					cin.ignore();
